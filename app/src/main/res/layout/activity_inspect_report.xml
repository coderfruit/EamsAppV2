<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 标题 -->
    <com.grandhyatt.snowbeer.view.ToolBarLayout
        android:id="@+id/mToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- 条码搜索 -->
    <com.grandhyatt.snowbeer.view.SearchBarLayout
        android:id="@+id/mSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rRL_bodyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:clickable="true"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />
            <!-- 设备信息标题 begin-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:background="@drawable/selector_linear_layout_item_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="设备信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />
            <!-- 设备信息标题 end -->

            <!-- 设备信息、设备图片 -->

            <LinearLayout
                android:id="@+id/mRL_DefectRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_linear_layout_item_white"
                android:orientation="horizontal">

                <!-- 设备信息 -->
                <LinearLayout
                    android:id="@+id/mLly_EquipInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <!-- 设备名称 编码 -->
                    <TextView
                        android:id="@+id/mTv_EquipName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="设备名称"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="设备编码"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />
                    <!-- 归属工厂 部门 责任人-->
                    <TextView
                        android:id="@+id/mTv_EquipCorp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="型号"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="所属部门"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="安装位置"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipKeeper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="责任人"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 设备图片 -->
                <LinearLayout
                    android:id="@+id/mLly_EquipImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mIv_EquipImg"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </LinearLayout>


            <!-- 检验信息标题 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:background="@drawable/selector_linear_layout_item_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="20dp"
                    android:text="检验信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />

            <!--检验时间\检验项目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <!--检验项目-->
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_linear_layout_item_white">

                    <TextView
                        android:id="@+id/mTv_inspItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="检验项目"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mTv_inspItem"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                </RelativeLayout>

                <!--检验时间-->
                <RelativeLayout
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_linear_layout_item_white">

                    <TextView
                        android:id="@+id/mTv_InspTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="检验时间"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/mIv_FaultDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mTv_InspTime"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                </RelativeLayout>

            </LinearLayout>

            <!--检验结果、检验方式-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_linear_layout_item_white">

                    <TextView
                        android:id="@+id/mTv_InspMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="检验方式"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mTv_InspMode"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="172dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_linear_layout_item_white">

                    <TextView
                        android:id="@+id/mTv_InspResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="检验结果"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mTv_InspResult"
                        android:src="@drawable/item_signature_iv_menu_defaul" />
                </RelativeLayout>


            </LinearLayout>

            <!--检验单位\费用-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/selector_linear_layout_item_white">

                <TextView
                    android:id="@+id/mTv_t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="检验人员："
                    android:textColor="@color/gray5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mEt_User"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:hint="检验人员"
                    android:textColor="@color/gray5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mTv_t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="费用："
                    android:textColor="@color/gray5"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/mEt_money"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="0"
                    android:textColor="@color/gray5"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:hint="元"
                    android:textColor="@color/gray5"
                    android:textSize="14sp" />

            </LinearLayout>

            <!--检验人员-->
            <LinearLayout
                android:id="@+id/lL_material"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/selector_linear_layout_item_white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:hint="检验单位："
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/mEt_Com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:hint="检验单位"
                        android:textColor="@color/gray5"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLl_Plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 检验计划标题 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/white6" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:background="@drawable/selector_linear_layout_item_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="20dp"
                        android:text="检验计划信息"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/mTv_jh"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_login_button_true"
                            android:text="选择检验计划"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--选择检验计划-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white6" />
                <!--检验计划列表-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/selector_linear_layout_item_white">

                    <ListView
                        android:id="@+id/mLv_Show_plan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_listview_item"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        android:stackFromBottom="true"
                        android:transcriptMode="alwaysScroll" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/white6" />

            <!-- 提交重置按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="right">

                <Button
                    android:id="@+id/mBtn_Submit"
                    android:layout_width="110sp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_login_button_true"
                    android:text="提交检验信息" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</LinearLayout>