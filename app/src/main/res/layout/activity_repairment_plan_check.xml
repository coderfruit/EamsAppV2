<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.grandhyatt.snowbeer.view.ToolBarLayout
        android:id="@+id/mToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 设备信息标题 begin-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:background="@drawable/selector_linear_layout_item_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="10dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="设备信息"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="1dp"
            android:background="@color/white6" />
        <!-- 设备信息标题 end -->

        <LinearLayout
            android:id="@+id/mLly_EquipInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <!-- 设备名称 编码 -->
            <TextView
                android:id="@+id/mTv_EquipName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="设备名称"
                android:textColor="@color/gray5"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"/>


            <TextView
                android:id="@+id/mTv_EquipCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="设备编码"
                android:textColor="@color/gray5"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"/>

            <TextView
                android:id="@+id/mTv_RepairmentLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="维修级别"
                android:textColor="@color/gray5"
                android:textSize="14sp"
                android:layout_weight="1"
                android:gravity="center"/>
        </LinearLayout>

        <!-- 设备维护计划/设备备件信息 begin-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:background="@drawable/selector_linear_layout_item_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="10dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorPrimary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="设备维护计划/备件信息"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="1dp"
            android:background="@color/white6" />
        <!-- 设备维护计划/设备备件信息 end -->

        <ListView
            android:id="@+id/mLv_DataList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@null"
            android:dividerHeight="0dp" />


        <Button
            android:id="@+id/mBtn_Complete"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_login_button_true"
            android:text="确定"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>