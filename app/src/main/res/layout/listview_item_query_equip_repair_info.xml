<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--ID-->
        <TextView
            android:id="@+id/mTv_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RptID"
            android:visibility="gone" />

        <!--设备-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTv_EquipName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="设备名称"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mTv_EquipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设备编码"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/mTv_RepairmentLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:text="大修"
                android:textColor="@color/blue1"
                android:textSize="14sp" />

        </LinearLayout>

        <!--单号、更换备件数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="单据编号："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_BillNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1.38"
                android:text="WX201809090001"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="更换备件种类："
                android:textColor="@color/gray5"
                android:textSize="10sp"
                android:layout_weight="0.07" />

            <TextView
                android:id="@+id/mTv_SpareCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="33件"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <!--制单人、制单日期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="制单人："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_makeUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="0.87"
                android:text="制单人"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="日期："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_makeDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2019-12-01"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <!--开始日期、结束日期-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="开始："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_Begin_Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="2018-12-01"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="结束："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_End_Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2019-12-01"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!--维修人、费用-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="维修人："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_Repair_User"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:text="2018-12-01"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="费用(元):"
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_Money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <!--描述-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="描述："
                android:textColor="@color/gray5"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/mTv_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="4dp"
                android:text="十字万向节轴承更换"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white6" />

</LinearLayout>