<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.grandhyatt.snowbeer.view.activity.AssayQueryActivity"
    android:background="@color/transparent_gray1">


    <com.grandhyatt.snowbeer.Ctrls.DropDownMenuView
        android:id="@+id/dropDownMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:duration="300">

        <!-- 第一个布局是顶部layout -->
        <LinearLayout
            android:id="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <!-- 标题 -->
                <com.grandhyatt.snowbeer.view.ToolBarLayout
                    android:id="@+id/mToolBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



            <!--列表-->
            <com.scwang.smartrefresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/mRefreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                app:srlAccentColor="@android:color/white"
                app:srlEnableLoadMore="true"
                app:srlHeaderMaxDragRate="2.5"
                app:srlPrimaryColor="@color/blue_title_bar">

                <com.scwang.smartrefresh.header.WaterDropHeader
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                    android:id="@+id/mLv_DataList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_list_view_item_common_white"
                    android:choiceMode="singleChoice"
                    android:divider="@null"
                    android:dividerHeight="0dp" />

                <com.scwang.smartrefresh.layout.footer.ClassicsFooter
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srlClassicsSpinnerStyle="Translate" />
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>
        </LinearLayout>


        <!-- 第二个布局是筛选条件的layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mToolBar"
            android:layout_marginTop="48dp"
            android:background="@color/transparent_gray1"
            >

            <!--筛选条件-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:background="@color/transparent_gray1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <!--组织机构-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mTv_Corp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="组织机构"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/item_signature_iv_menu_defaul" />
                    </LinearLayout>

                    <!--部门-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mTv_Dept"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="归属部门"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/item_signature_iv_menu_defaul" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <!--使用状况-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mTv_UseState"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="使用状况"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/item_signature_iv_menu_defaul" />
                    </LinearLayout>

                    <!--设备类型-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/mTv_EquipType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="设备类型"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/item_signature_iv_menu_defaul" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <!--设备信息-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="设备"/>
                        <EditText
                            android:id="@+id/mEt_EquipInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="设备信息"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!--安装地点-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地点"/>
                        <EditText
                            android:id="@+id/mEt_Location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="安装地点"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="7dp">
                    <!--责任人-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="责任人"/>
                        <EditText
                            android:id="@+id/mEt_Keeper"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="责任人"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!--生产厂家-->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="厂商"/>
                        <EditText
                            android:id="@+id/mEt_Manu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="厂商"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>

<!--按钮-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp">

                    <Button
                        android:id="@+id/mBt_Cancle"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_login_button_true"
                        android:text="取消"
                        android:layout_weight="2"
                        android:layout_marginLeft="20dp" />
                    <Button
                        android:id="@+id/mBt_Clear"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_login_button_true"
                        android:text="重置"
                        android:layout_weight="2"
                        android:layout_marginLeft="20dp" />

                    <Button
                        android:id="@+id/mBt_Search"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@drawable/ic_login_button_true"
                        android:text="确定"
                        android:layout_weight="6"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.grandhyatt.snowbeer.Ctrls.DropDownMenuView>


</FrameLayout>

