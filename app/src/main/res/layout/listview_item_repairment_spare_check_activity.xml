<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_item"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/mLl_name"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTv_SpareName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="备件名称及型号"
                android:textColor="@color/black"
                android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginLeft="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可用量:"
                android:textColor="@color/gray5"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/mTv_SumCountx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/gray5"
                android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <com.grandhyatt.snowbeer.view.NumberEditText
            android:id="@+id/mNEdt_Check"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/mLl_name">

        </com.grandhyatt.snowbeer.view.NumberEditText>

        <TextView
            android:id="@+id/mTv_Unit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="个"
            android:textColor="@color/gray5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mTv_SpareID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray5"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>