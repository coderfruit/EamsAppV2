<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listview_item"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="备件名称及型号"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:id="@+id/mTv_SpareName" />

        <com.grandhyatt.snowbeer.view.NumberEditText
            android:id="@+id/mNEdt_Check"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp">


        </com.grandhyatt.snowbeer.view.NumberEditText>

        <TextView
            android:id="@+id/mTv_Unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/mTv_SpareName"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:text="个"
            android:textColor="@color/gray5"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/mTv_SumCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/gray5"
            android:textSize="12sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white6" />

</LinearLayout>