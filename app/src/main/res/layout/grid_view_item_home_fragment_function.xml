<?xml version="1.0" encoding="utf-8"?>
<com.grandhyatt.snowbeer.view.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mRL_Item"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@drawable/selector_gridview_item">

        <ImageView
            android:id="@+id/mIv_Icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_logo"/>

        <TextView
            android:id="@+id/mTv_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:text="Name"
            android:gravity="center"
            android:layout_below="@id/mIv_Logo"
            android:textColor="@android:color/black"
            />

</com.grandhyatt.snowbeer.view.SquareLayout>