<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white1"
    android:orientation="vertical">

    <com.grandhyatt.snowbeer.view.ToolBarLayout
        android:id="@+id/mToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_user_name_background"
        android:orientation="horizontal"
        android:paddingBottom="11dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="11dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_register_user_phone"/>

        <EditText
            android:id="@+id/mEdt_Mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入手机号码"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLength="11"
            android:phoneNumber="true"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:textColor="#000000"
            android:textColorHint="#c4c4c4"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginRight="9dp"
            android:layout_weight="2"
            android:background="@drawable/bg_register_edit_text"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="11dp">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="26dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_sms_code" />

            <EditText
                android:id="@+id/mEdt_SmsCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="请输入验证码"
                android:imeOptions="actionNext"
                android:maxLength="6"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@drawable/edit_text_cursor"
                android:textColorHint="#c4c4c4"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/mBtn_GetSmsCode"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/ic_button_get_code_before"
            android:singleLine="true"
            android:text="获取验证码"
            android:textColor="#c4c4c4"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/bg_user_name_background"
        android:orientation="horizontal"
        android:paddingBottom="12dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="12dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_password" />

        <EditText
            android:id="@+id/mEdt_Password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="设置6-18位密码"
            android:password="true"
            android:imeOptions="actionDone"
            android:maxLength="18"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#c4c4c4"
            android:textSize="13sp" />

        <CheckBox
            android:id="@+id/mChk_ShowPassword"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:textCursorDrawable="@drawable/edit_text_cursor"
            android:button="@drawable/selector_see_password_background" />
    </LinearLayout>

    <Button
        android:id="@+id/mBtn_Commit"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/selector_register_button_background"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white1"
        android:textSize="14sp" />

</LinearLayout>