<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_linear_layout_item_white"
    android:orientation="vertical">
    <!-- 标题 -->
    <com.grandhyatt.snowbeer.view.ToolBarLayout
        android:id="@+id/mToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!-- 条码搜索 -->
    <com.grandhyatt.snowbeer.view.SearchBarLayout
        android:id="@+id/mSearchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
          android:id="@+id/rRL_bodyView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:clickable="true"
          >


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white6" />
            <!-- 设备信息标题 begin-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:background="@drawable/selector_linear_layout_item_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:text="设备信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />
            <!-- 设备信息标题 end -->

            <!-- 设备信息、设备图片 -->
            <LinearLayout
                android:id="@+id/mRL_DefectRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_linear_layout_item_white"
                android:orientation="horizontal">
                <!-- 设备信息 -->
                <LinearLayout
                    android:id="@+id/mLly_EquipInfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:orientation="vertical">
                    <!-- 设备名称 编码 -->
                    <TextView
                        android:id="@+id/mTv_EquipName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="设备名称"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="设备编码"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />
                    <!-- 归属工厂 部门 责任人-->
                    <TextView
                        android:id="@+id/mTv_EquipCorp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="型号"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipDept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="所属部门"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="安装位置"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mTv_EquipKeeper"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="责任人"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- 设备图片 -->
                <LinearLayout
                    android:id="@+id/mLly_EquipImg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="5"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mIv_EquipImg"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:background="@color/white6" />
            <!--维修信息标题-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:background="@drawable/selector_linear_layout_item_gray"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="3dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="20dp"
                    android:text="维修信息"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
            <!-- 选择故障日期  选择故障级别-->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />

            <!--开始日期、结束日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_linear_layout_item_white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTv_StartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="开始日期"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/mIv_FaultDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mTv_StartDate"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                    <!--结束日期-->
                    <ImageView
                        android:id="@+id/mIv_FinishDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                    <TextView
                        android:id="@+id/mTv_FinishDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/mIv_FinishDate"
                        android:hint="结束日期"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />


                </RelativeLayout>
            </LinearLayout>

            <!--故障类别、添加故障描述-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTv_FaultClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="故障类别"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/mIv_FaultDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/mTv_FaultClass"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                    <ImageView
                        android:id="@+id/mIv_RepairmentDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                    <TextView
                        android:id="@+id/mTv_RepairLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/mIv_RepairmentDesc"
                        android:hint="维修级别"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/mTv_RepairDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="false"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:hint="添加故障描述"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/mTv_RepairDesc"
                        android:src="@drawable/item_signature_iv_menu_defaul" />

                </RelativeLayout>
            </LinearLayout>

            <!-- 维修人、费用 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/mTv_UserTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="维修人："
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/mEt_User"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@+id/mTv_UserTitle"
                        android:hint="维修人"
                        android:textColor="@color/gray5"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/mTv_t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:hint="(元)"
                        android:textColor="@color/gray5"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/mEt_money"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_toLeftOf="@+id/mTv_t3"
                        android:layout_toStartOf="@+id/mTv_t3"
                        android:gravity="center"
                        android:hint="外委费用"
                        android:inputType="numberDecimal"
                        android:textColor="@color/gray5"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/mTv_t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@id/mEt_money"
                        android:text="外委费用："
                        android:textColor="@color/gray5"
                        android:textSize="12sp" />


                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/white6" />

            <!--维修计划相关-->
            <LinearLayout
                android:id="@+id/mLl_Plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!--维修计划标题-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:background="@drawable/selector_linear_layout_item_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="20dp"
                            android:text="维修计划"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <!--维修计划-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">


                        <!--选择维修计划-->
                        <Button
                            android:id="@+id/mBtn_ChoicePlan"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_login_button_true"
                            android:text="选择维修计划"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white6" />
                <!--计划列表-->
                <ListView
                    android:id="@+id/mLv_Show_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_listview_item"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:stackFromBottom="true"
                    android:transcriptMode="alwaysScroll" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/white6" />
            </LinearLayout>

            <!--备件信息相关-->
            <LinearLayout
                android:id="@+id/mLl_Spare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--备件信息标题-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:background="@drawable/selector_linear_layout_item_gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:background="@drawable/selector_linear_layout_item_gray"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="10dp"
                            android:layout_marginLeft="20dp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="20dp"
                            android:text="备件信息"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/mBtn_AddSpare"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="4dp"
                            android:background="@drawable/ic_login_button_true"
                            android:text="选择更换备件"
                            android:textAlignment="center"
                            android:textSize="12dp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white6" />
                <!--备件信息列表-->
                <ListView
                    android:id="@+id/mLv_DataList_Spare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:listSelector="@drawable/selector_listview_item"
                    android:transcriptMode="alwaysScroll" />

            </LinearLayout>


            <!-- 提交重置按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="right">

                <Button
                    android:id="@+id/mBtn_Submit"
                    android:layout_width="120sp"
                    android:layout_height="40dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/ic_login_button_true"
                    android:text="提交维修信息" />
            </LinearLayout>


        </LinearLayout>
      </RelativeLayout>
    </ScrollView>


</LinearLayout>